<%- include('layouts/header.ejs'); -%>

    <h2 class="mb-4">Groups
    </h2>

    <div class="row">

        <div class="col-md-3">
            <ul class="group-chat-list">
                <% if(mygrp.length> 0){
                    for(let i=0;i<mygrp.length;i++){ %>
                        <li class="list-group-item list-group-item-dark cursor-pointer user-list"
                            data-id="<%=mygrp[i]['_id'] %>">
                            <img src="<%= '/'+mygrp[i]['image'] %>" alt="userpic" width="50"
                                height="50">
                            <%= mygrp[i]['name'] %>

                        </li>
                        <% } } %>

                <% if(joinedgrp.length> 0){
                    for(let i=0;i<joinedgrp.length;i++){ %>
                            <li class="list-group-item list-group-item-dark cursor-pointer user-list"
                                        data-id="<%=joinedgrp[i]['group_id']['_id'] %>">
                                        
                                        <img src="<%= '/'+joinedgrp[i]['group_id']['image'] %>" alt="userpic"
                                            width="50" height="50">
                                        <%= joinedgrp[i]['group_id']['name'] %>

                            </li>
                    <% } } %>
            </ul>
        </div>

        <div class="col-md-9">
            <h3 class="group-start-head"> Click to Start the Chat </h3>
            <div class="group-chat-section">
                <div id="group-chat-container">

                </div>
                <form action="" id="group-chat-form">
                    <input type="text" name="message" placeholder="Enter Message" id="group-message" I class="border"
                        required>
                    <input type="submit" value="Send Message" class="btn btn-primary">
                </form>
            </div>
        </div>
    </div>


    <!--Delete group msg-->
    <div class="modal fade" id="deletegroupChat" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete message</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="" id="delete-group-message-form">
                    <div class="modal-body">
                        <input type="hidden" name="id" id="delete-grp-message-id">
                        <p>Are you sure you want to delete the message?</p>
                        <b><p id="delete-grp-message"></p> </b>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--Update grp msg-->
    <div class="modal fade" id="updatemessageGroupChat" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Update message</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form  id="edit-group-message-form">
                    <div class="modal-body">
                        <input type="hidden" name="id" id="edit-group-message-id">
                        <input type="text" name="message" id="update-group-message-id">
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <%- include('layouts/footer.ejs'); -%>